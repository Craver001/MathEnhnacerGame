<!-- border_stroke.xml -->
<!-- border_stroke_pressed.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#00000000" /> <!-- Transparent color -->
            <stroke
                android:width="2dp"
            android:color="#29B6F6" /> <!-- Border color for pressed state -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#00000000" /> <!-- Transparent color -->
            <stroke
                android:width="2dp"
            android:color="#FFFFFF" /> <!-- Default border color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
